@using comic.ViewModels
@model RegisterViewModel

@{
    ViewData["Title"] = "Register";

    Layout = "_AuthenticateLayout";
}


@section Link {
    <link rel="stylesheet" href="~/css/authenticate/register.css" asp-append-version="true"/>
}

@section Script {
    <script type="text/javascript" src="~/js/register/password-input.js" defer></script>

    <script type="text/javascript" src="~/js/register/password-description.js" defer></script>
}

<div class="header-wrapper">
    @if (TempData["Error"] != null)
    {
        <div class="col-md-12 alert alert-danger">
            <span><b>Sorry!</b> - @TempData["Error"]</span>
        </div>
    }
    <div class="header">
        <a href="/" class="header-link">
            <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round">
                <rect width="18" height="18" x="3" y="3" rx="2"/>
                <path d="M7 7v10"/>
                <path d="M11 7v10"/>
                <path d="m15 7 2 10"/>
            </svg>
            <span>FPT Book</span>
        </a>
    </div>
</div>
<div class="form-wrapper">
    <div class="form-header">
        <h1>Sign up an account</h1>
    </div>
    <div class="form-content">
        <form asp-action="Register" class="form-body">
            <div class="group-input">
                <label asp-for="UserName">Username</label>
                <input
                    asp-for="UserName"
                    id="email"
                    name="username"
                    type="text"
                    autofocus=true
                    autocomplete="off"
                    placeholder="MaZuong2k3"
                    required="required"/>
            </div>
            <div class="group-input">
                <label asp-for="Email">Email</label>
                <input
                    asp-for="Email"
                    id="email"
                    name="email"
                    type="email"
                    autocomplete="off"
                    placeholder="abc@fpt.edu.vn"
                    required="required"/>
            </div>
            <div class="group-input">
                <label asp-for="Password">Password</label>
                <input
                    asp-for="Password"
                    id="password"
                    name="password"
                    type="password"
                    autocomplete="off"
                    placeholder="••••••••"
                    required="required" style="padding-right: 2.5rem"/>
                <button type="button" class="password-icon">
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="24"
                        height="24"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round">
                        <path d="M2 12s3-7 10-7 10 7 10 7-3 7-10 7-10-7-10-7Z"/>
                        <circle cx="12" cy="12" r="3"/>
                    </svg>
                    <span>Show password</span>
                </button>
            </div>
            <div class="password-description-wrapper">
                <div class="password-description" data-contain="false" data-control="password-uppercase">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0z"></path>
                    </svg>
                    <p>Uppercase letter</p>
                </div>
                <div class="password-description" data-contain="false" data-control="password-lowercase">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0z"></path>
                    </svg>
                    <p>Lowercase letter</p>
                </div>
                <div class="password-description" data-contain="false" data-control="password-contain-number">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0z"></path>
                    </svg>
                    <p>Number</p>
                </div>
                <div class="password-description" data-contain="false" data-control="password-special-character">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0z"></path>
                    </svg>
                    <p>Special character (e.g. !?&lt;&gt;&#64;#$%)</p>
                </div>
                <div class="password-description" data-contain="false" data-control="password-length">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0z"></path>
                    </svg>
                    <p>&gt; 7 characters</p>
                </div>
            </div>
            <button type="submit" class="submit-button" disabled="disabled">
                <span>Sign Up</span>
            </button>
        </form>
    </div>
    <div class="register-wrapper">
        <div class="register">
            <span>Already have an account?</span>
            <a asp-action="Login">Sign In</a>
        </div>
    </div>
</div>