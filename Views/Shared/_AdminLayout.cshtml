<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"]</title>

    <link rel="stylesheet" href="~/css/global.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/shared-layout/admin-layout.css" asp-append-version="true"/>

    @await RenderSectionAsync("Link", required: false)

    <script type="text/javascript" src="~/js/global.js" defer></script>

    @await RenderSectionAsync("Script", required: false)
</head>
<body>
<div class="layout-wrapper">
    <div class="layout">
        <main class="inner-layout-wrapper">
            <div class="inner-layout">
                <div class="nav-bar-wrapper">
                    <nav class="nav-bar">
                        <a href="/" class="nav-bar-header">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <rect width="8" height="18" x="3" y="3" rx="1"/><path d="M7 3v18"/>
                                <path d="M20.4 18.9c.2.5-.1 1.1-.6 1.3l-1.9.7c-.5.2-1.1-.1-1.3-.6L11.1 5.1c-.2-.5.1-1.1.6-1.3l1.9-.7c.5-.2 1.1.1 1.3.6Z"/>
                            </svg>
                            <h1>FPT Book</h1>
                        </a>
                        <ul class="nav-list-content-wrapper">
                            <li>
                                <div class="nav-list-content">
                                    <a href="/">
                                        <span>Home</span>
                                        <svg
                                            xmlns="http://www.w3.org/2000/svg"
                                            width="24"
                                            height="24"
                                            viewBox="0 0 24 24"
                                            fill="none"
                                            stroke="currentColor"
                                            stroke-width="2"
                                            stroke-linecap="round"
                                            stroke-linejoin="round">
                                            <path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/>
                                            <polyline points="9 22 9 12 15 12 15 22"/>
                                        </svg>
                                    </a>
                                    <a href="/">
                                        <span>Manage Products</span>
                                        <svg
                                            xmlns="http://www.w3.org/2000/svg"
                                            width="24"
                                            height="24"
                                            viewBox="0 0 24 24"
                                            fill="none"
                                            stroke="currentColor"
                                            stroke-width="2"
                                            stroke-linecap="round"
                                            stroke-linejoin="round">
                                            <path d="m7.5 4.27 9 5.15"/>
                                            <path
                                                d="M21 8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16Z"/>
                                            <path d="m3.3 7 8.7 5 8.7-5"/>
                                            <path d="M12 22V12"/>
                                        </svg>
                                    </a>
                                    <a href="/">
                                        <span>Manage Users</span>
                                        <svg
                                            xmlns="http://www.w3.org/2000/svg"
                                            width="24"
                                            height="24"
                                            viewBox="0 0 24 24"
                                            fill="none"
                                            stroke="currentColor"
                                            stroke-width="2"
                                            stroke-linecap="round"
                                            stroke-linejoin="round">
                                            <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/>
                                            <circle cx="9" cy="7" r="4"/>
                                            <path d="M22 21v-2a4 4 0 0 0-3-3.87"/>
                                            <path d="M16 3.13a4 4 0 0 1 0 7.75"/>
                                        </svg>
                                    </a>
                                </div>
                            </li>
                        </ul>
                    </nav>
                </div>

                @RenderBody()
            </div>
        </main>
    </div>
</div>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>